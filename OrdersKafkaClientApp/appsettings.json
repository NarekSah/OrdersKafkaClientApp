{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "Acks": "all",
    "Retries": 3,
    "EnableIdempotence": true,
    "MaxInFlight": 1,
    "CompressionType": "snappy",
    "BatchSize": 16384,
    "LingerMs": 5,
    "RequestTimeoutMs": 30000,
    "DeliveryTimeoutMs": 300000,
    "ClientId": "orders-kafka-producer"
  }
}
